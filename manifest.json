{
  "manifest_version": 3,
  "name": "Speedway Motors Auto Browser",
  "version": "1.0.0",
  "description": "Automated browsing tool for Speedway Motors with human-like behavior simulation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting", 
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.speedwaymotors.com/*",
    "https://*.speedwaymotors.com/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "https://www.speedwaymotors.com/*", 
      "https://*.speedwaymotors.com/*",
      "http://localhost:*/*"
    ],
    "js": [
      "content/human-simulator.js",
      "content/page-detector.js",
      "content/scenario-runner.js", 
      "content/content.js"
    ],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Speedway Motors Auto Browser"
  },
  "web_accessible_resources": [{
    "resources": ["popup/*", "content/*"],
    "matches": ["<all_urls>"]
  }],
  "minimum_chrome_version": "88"
}